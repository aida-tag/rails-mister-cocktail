
<h2><%= @cocktail.name %> </h2>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item">
      <%= dose.ingredient.name %> :
      <%= dose.description %>
      <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "back to list", cocktails_path  %>
<%= link_to "add ingredient", new_cocktail_dose_path(@cocktail) %>
